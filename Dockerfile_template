# 6. CPU and temp
COPY build/cpu_and_temp /build/cpu_and_temp
RUN /build/cpu_and_temp/run.sh

# 22. TTS
COPY build/audio /build/audio
RUN /build/audio/run.sh

# 23. nano /etc/rc.local
COPY build/run_control /build/run_control
RUN /build/run_control/run.sh

# Create a startup script to run all our services
RUN echo "#!/usr/bin/env sh" > /start.sh && \
  echo "python /home/pi/indi/indiwebmanager/servermanager/drivermanager.py &" >> /start.sh && \
  echo "/home/pi/indi/pyindi-ws.sh &" >> /start.sh && \
  echo "Xvfb :1 -screen 0 800x600x16 -ac &" >> /start.sh && \
  echo "x11vnc -rfbport 5566 -forever -display :1 &" >> /start.sh && \
  echo "/home/pi/www/noVNC/utils/./launch.sh --vnc localhost:5566 --listen 5666 &" >> /start.sh && \
  chmod +x /start.sh
CMD ["/start.sh"]